<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvSelectedPickUpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_pin_black" />

    <TextView
        android:id="@+id/tvSelectedDropOffAddress"
        android:layout_below="@id/tvSelectedPickUpAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:drawableLeft="@drawable/ic_flag_black" />

    <TextView
        android:id="@+id/tvAdditionalDetails"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Additional address details"
        android:layout_below="@id/tvSelectedDropOffAddress"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="12sp" />
</RelativeLayout>